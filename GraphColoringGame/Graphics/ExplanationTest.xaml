<Page x:Class="GraphColoringGame.ExplanationTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphColoringGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="250"
      Title="ExplanationTest"
      Background="Gray">


    <Grid Name="ExplanationOpen">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20" MinHeight="9"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="231*" Name="TextBlockRow"/>
            <RowDefinition Height="74*" Name="ButtonRow"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="5" Name="ButtonGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="83.3"/>
                <ColumnDefinition Width="83.3"/>
                <ColumnDefinition Width="83.3"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource SymbolButton}" Content="&#xE72B;"/>
            <Button Grid.Column="2" Style="{StaticResource SymbolButton}" Content="&#xE72A;"/>
        </Grid>
    </Grid>
</Page>
