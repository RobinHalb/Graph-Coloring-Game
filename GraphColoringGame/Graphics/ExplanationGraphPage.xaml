<Page x:Class="GraphColoringGame.Graphics.ExplanationGraphPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphColoringGame.Graphics"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExplanationGraphPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Name="GraphGrid" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame Name="ColorPickerFrame" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Page>
