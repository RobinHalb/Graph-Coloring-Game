<Page x:Class="GraphColoringGame.GraphPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphColoringGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Turn:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
            <Label Name="TurnLabel" Grid.Column="1" Content="Alice" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        </Grid>
        
        <Grid Name="GraphGrid" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame Name="ColorPickerFrame" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Page>
