<Page x:Class="GraphColoringGame.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphColoringGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="White"
      Title="Page1">

    <Grid Margin="0,10,0,0">
        <StackPanel x:Name="ColorPick" Orientation="Horizontal" Margin="318,168,317,168">
            <Rectangle Height="40" Stroke="Black" Width="40" Fill="Red" Margin="0,0,15,0"/>
            <Rectangle Height="40" Stroke="Black"  Width="40" Fill="Blue" Margin="0,0,15,0"/>
            <Rectangle Height="40" Stroke="Black" Width="40" Fill="Green"/>
        </StackPanel>

    </Grid>
</Page>
