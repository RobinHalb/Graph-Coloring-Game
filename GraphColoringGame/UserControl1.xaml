<UserControl x:Class="GraphColoringGame.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphColoringGame"
             mc:Ignorable="d" 
                   d:DesignHeight="70" d:DesignWidth="115"
         d:Background="Wheat">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Height="40" Width="40" Margin="10,0,15,0" Name="RedColor">
                <Button.Template>
                    <ControlTemplate>
                        <Rectangle Height="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualHeight}" Stroke="Black" Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}" Fill="Red"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Rectangle Height="40" Stroke="Black"  Width="40" Fill="Blue" Margin="0,0,15,0"/>
        </StackPanel>

    </Grid>
</UserControl>
