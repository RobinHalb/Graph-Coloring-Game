<Page x:Class="GraphColoringGame.GraphPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphColoringGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphPage">

    <Grid Name="GraphPageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Name="graphGrid" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Name="ColorPicker" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Page>
